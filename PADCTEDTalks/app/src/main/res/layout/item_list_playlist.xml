<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginStart="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_small"
    android:foreground="@drawable/bg_ripple_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_playlist_back_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/place_holder_promotion"
            android:scaleType="centerCrop"
            android:foreground="#4f201f1f"/>

        <TextView
            android:id="@+id/tv_play_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 talks | 1:59:42"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_regular"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/tv_play_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What we don't talk about (when we talk about sex)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:maxLines="2"
            android:textSize="@dimen/text_regular_2x"
            android:layout_above="@id/tv_play_list_time"
            android:layout_alignStart="@id/tv_play_list_time"/>
        <ImageView
            android:id="@+id/iv_more_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_grey"
            android:layout_alignEnd="@id/tv_play_list_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_medium"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
