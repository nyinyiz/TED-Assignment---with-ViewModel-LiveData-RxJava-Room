<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/margin_medium">

    <ImageView
        android:id="@+id/iv_talks_in_play_list_back_drop"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:src="@drawable/place_holder_promotion"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_time_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:28"
        android:textColor="@color/white"
        android:textSize="@dimen/text_regular"
        android:background="#85212121"
        android:padding="@dimen/margin_small"
        android:layout_alignBottom="@id/iv_talks_in_play_list_back_drop"
        android:layout_margin="@dimen/margin_medium"
        android:layout_alignRight="@id/iv_talks_in_play_list_back_drop"
        />
    <TextView
        android:id="@+id/tv_talks_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amel Karboul"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular"
        android:layout_toRightOf="@id/iv_talks_in_play_list_back_drop"
        android:layout_marginLeft="@dimen/margin_medium"
        />
    <TextView
        android:id="@+id/tv_talks_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="The global learning crisis and what to do about it"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:maxLines="2"
        android:textSize="@dimen/text_regular_2x"
        android:layout_below="@id/tv_talks_speaker"
        android:layout_toRightOf="@id/iv_talks_in_play_list_back_drop"
        android:layout_marginLeft="@dimen/margin_medium"/>
    <ImageView
        android:id="@+id/iv_more_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_grey"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>