<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_pod_cast_back_drop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/place_holder_promotion"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ted_radio_hour"
            android:layout_margin="@dimen/margin_medium"
            android:layout_alignBottom="@id/iv_pod_cast_back_drop"/>

        <TextView
            android:id="@+id/tv_pod_cast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can We Trust The Numbers?"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:maxLines="2"
            android:textSize="@dimen/text_regular_2x"
            android:layout_below="@id/iv_pod_cast_back_drop"
            android:layout_margin="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/tv_pod_cast_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are the five biggest global challenges we face right now--and what can we do about them? This hour, TED speakers explore some radical solutions to these enduring problems."
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_below="@id/tv_pod_cast_title"
            android:ellipsize="end"
            android:lines="4"
            />
        <ImageView
            android:id="@+id/iv_more_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_grey"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/iv_pod_cast_back_drop"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>